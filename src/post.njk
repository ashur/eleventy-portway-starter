---
layout: layouts/base.njk
tags: posts
pagination:
    data: posts
    size: 1
    alias: post
    addAllPagesToCollections: true
permalink: "/{{ post.permalink }}/index.html"
---
<main
    class="[ stack-lg ][ center container ][ content post ]"
>    
    <header class="[ stack-sm measure ][ center ][ post-header ]">
        <h1 class="[][ line-1 font-sans ][]">{{ post.name }}</h1>

        {% include "components/post-metadata.njk" %}
    </header>

    <div class="[ stack measure ][ center color-gray-dark font-sans ][ page-contents ]">
        {{ post.html | safe }}
    </div>
</main>
